{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "prettier",
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-unused-vars": [
      false
    ],
    "no-console": [
      false
    ]
  }
}